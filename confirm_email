<body>
  <div class="container">
    <div id="loading" class="loading">
      <div class="icon">⏳</div>
      <h1>Verifying Email...</h1>
      <p class="subtitle">Please wait while we confirm your email address</p>
    </div>
    
    <div id="success" style="display: none;">
      <div class="icon">✓</div>
      <h1>Email Confirmed!</h1>
      <p class="success">Your email has been successfully verified.</p>
      <p class="subtitle" style="margin-top: 20px;">Redirecting to app...</p>
    </div>
    
    <div id="error" style="display: none;">
      <div class="icon">✕</div>
      <h1>Verification Failed</h1>
      <p class="error" id="errorMessage"></p>
      <button onclick="window.location = 'stylit://auth'">Open App</button>
    </div>
  </div>

  <script>
    // Get hash fragment from URL
    const hash = window.location.hash.substring(1);
    const params = new URLSearchParams(hash);
    const accessToken = params.get('access_token');
    const refreshToken = params.get('refresh_token');
    const type = params.get('type');
    const error = params.get('error');
    const errorDescription = params.get('error_description');
    
    // Check for errors first
    if (error) {
      document.getElementById('loading').style.display = 'none';
      document.getElementById('error').style.display = 'block';
      document.getElementById('errorMessage').textContent = 
        errorDescription || error || 'Email verification failed. The link may have expired.';
      return;
    }
    
    // Check if we have valid tokens
    if (!accessToken || type !== 'signup') {
      document.getElementById('loading').style.display = 'none';
      document.getElementById('error').style.display = 'block';
      document.getElementById('errorMessage').textContent = 
        'Invalid verification link. Please request a new confirmation email.';
      return;
    }
    
    // Success - redirect to app with tokens
    // The app will handle the session setup
    setTimeout(() => {
      // Redirect to app with tokens in the URL
      const redirectUrl = `stylit://confirm-email#access_token=${accessToken}&refresh_token=${refreshToken}&type=${type}`;
      window.location = redirectUrl;
      
      // Fallback: show success message
      document.getElementById('loading').style.display = 'none';
      document.getElementById('success').style.display = 'block';
    }, 1000);
  </script>
</body>
</html>
